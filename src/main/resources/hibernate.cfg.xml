<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Hibernate Dialect for MariaDB -->
        <property name="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</property>

        <!-- JDBC Driver Class -->
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>

        <!-- Database Connection URL -->
        <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/Students</property>

        <!-- Database Credentials -->
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Mayur7218@</property>

        <!-- Schema Generation Strategy -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Show SQL Queries -->
        <property name="hibernate.show_sql">true</property>

        <!-- Entity Mappings -->
        <mapping class="org.example.Student"/>
        <mapping class="org.example.Course"/>
    </session-factory>
</hibernate-configuration>
